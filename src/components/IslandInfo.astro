---
import type { Contact } from "../data/islandInfo";
import { contacts } from "../data/islandInfo";
---

<section class="px-5 py-16 flex flex-col gap-14">
  {
    contacts.map((contact: Contact) => (
      <article class="grid grid-cols-3 items-center">
        <img src={ contact.icon }/>
        <p class=" text-lg font-light text-primary-black">{ contact.title }</p>
        <div class="text-xs flex flex-col gap-4 items-start">
          <p>{ contact.info }</p>
          <p>{ contact.additionalInfo }</p>
        </div>
      </article>
    ))
  }
</section>